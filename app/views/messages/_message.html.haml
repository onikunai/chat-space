.chat-main__messages__body{data: {id: "#{message.id}"}}
  .chat-main__messages__body__user
    = message.user.name
  .chat-main__messages__body__date
    = message.created_at.strftime("%Y/%m/%d %H:%M")
  .chat-main__messages__body__text
    - if message.content.present?
      %p.lower-message__content
        = message.content
    = image_tag message.image.url, class: 'lower-message__image' if message.image.present?